source $VIMRUNTIME/defaults.vim

" -----  Options  -----
set tabstop=4
set softtabstop=4
set shiftwidth=4
set noexpandtab

set number
set relativenumber
set cursorline
set cursorlineopt=number
set scrolloff=4
set sidescrolloff=4

set splitbelow
set splitright

set hlsearch
set ignorecase

set background=light
set termguicolors

set laststatus=2
set ruler

set mouse=a

syntax enable

" -----  Keymaps  -----
nnoremap <Space> <NOP>
let g:mapleader = ' '
let g:maplocalleader = ';'

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap <F11> :resize +2<CR>
nnoremap <F10> :resize -2<CR>
nnoremap <F12> :vertical resize +2<CR>
nnoremap <F9> :vertical resize -2<CR>

nnoremap <Bslash> :vertical wincmd =<CR>
nnoremap <Bar> :horizontal wincmd =<CR>

nnoremap <F7> :bnext<CR>
nnoremap <F8> :bprevious<CR>
nnoremap <Leader>b :buffers<CR>:buffer<Space>

nnoremap <Leader>h :nohlsearch<CR>
nnoremap <Leader>H :set hlsearch!<CR>

nnoremap <Leader>n :set relativenumber!<CR>

nnoremap <Leader>v :vsplit<CR>
nnoremap <Leader>V :split<CR>

nnoremap <Leader>c :close<CR>
nnoremap <Leader>d :bdelete<CR>

" ------  Plugins  ------
let g:airline_symbols_ascii = 1
let g:airline#extensions#tabline#enabled = 1
let g:airline_theme='base16_material_lighter'

call plug#begin()
Plug 'airblade/vim-gitgutter'
Plug 'junegunn/fzf'
Plug 'junegunn/fzf.vim'
Plug 'preservim/nerdtree'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-sensible'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
call plug#end()

nnoremap <Leader>pc :PlugClean<CR>
nnoremap <Leader>ps :PlugStatus<CR>
nnoremap <Leader>pp :PlugUpdate<CR>

nnoremap <Leader>e :NERDTreeToggle<CR>
