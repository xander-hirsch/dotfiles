source $VIMRUNTIME/defaults.vim

" -----  Options  -----
set tabstop=4
set softtabstop=4
set shiftwidth=4
set noexpandtab

set number
set relativenumber
set cursorline
set cursorlineopt=number
set scrolloff=8
set sidescrolloff=8

set splitbelow
set splitright

set hlsearch
set ignorecase

set background=light

set laststatus=2
set ruler

syntax enable

" -----  Keymaps  -----
nnoremap <Space> <NOP>
let g:mapleader = ' '
let g:maplocalleader = ';'

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap <F11> <Cmd>resize +2<CR>
nnoremap <F10> <Cmd>resize -2<CR>
nnoremap <F12> <Cmd>vertical resize +2<CR>
nnoremap <F9> <Cmd>vertical resize -2<CR>

nnoremap <Bslash> <Cmd>vertical wincmd =<CR>
nnoremap <Bar> <Cmd>horizontal wincmd =<CR>

nnoremap <F7> <Cmd>bnext<CR>
nnoremap <F8> <Cmd>bprevious<CR>

nnoremap <Leader>h <Cmd>nohlsearch<CR>
nnoremap <Leader>H <Cmd>set hlsearch!<CR>

nnoremap <Leader>n <Cmd>set relativenumber!<CR>

nnoremap <Leader>v <Cmd>vsplit<CR>
nnoremap <Leader>V <Cmd>split<CR>

nnoremap <Leader>c <Cmd>close<CR>
nnoremap <Leader>d <Cmd>bdelete<CR>

" ------  Plugins  ------
let g:airline_symbols_ascii = 1
let g:airline#extensions#tabline#enabled = 1
let g:airline_theme='solarized'

call plug#begin()
Plug 'altercation/vim-colors-solarized'
Plug 'airblade/vim-gitgutter'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'preservim/nerdtree'
Plug 'tpope/vim-commentary'
call plug#end()

nnoremap <Leader>pc <Cmd>PlugClean<CR>
nnoremap <Leader>pp <Cmd>PlugUpdate<CR>
nnoremap <Leader>ps <Cmd>PlugStatus<CR>
nnoremap <Leader>pu <Cmd>PlugUpgrade<CR>

nnoremap <Leader>e <Cmd>NERDTreeToggle<CR>

if $TERM == 'xterm-256color'
	colorscheme solarized
endif

