{{ if eq .email "xander@xanderhirsch.net" -}}
Match host *.xanderhirsch.us
	ForwardAgent yes

Host github.com
	RequestTTY no
{{- end }}

Host *
	IgnoreUnknown UseKeychain

	UseKeychain yes
	AddKeysToAgent yes
	IdentityFile ~/.ssh/id_ed25519

	ControlMaster auto
	ControlPath ~/.ssh/control/%C
	ControlPersist 600

{{ if eq .email "xander@xanderhirsch.net" -}}
	CanonicalizeHostname yes
	CanonicalDomains home.xanderhirsch.us
{{- end }}
