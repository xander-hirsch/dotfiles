alias d='dirs -v'
for index ({1..5}) alias $index="cd +${index}"; unset index

alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gch='git checkout'
alias gcl='git clone'
alias gd='git diff'
alias gf='git fetch'
alias gl='git log'
alias glog='git log --graph --oneline'
alias gpu='git pull'
alias gp='git push'
alias grb='git rebase --interactive'
alias gre='git remote'
alias gr='git restore'
alias gs='git status'
alias gsh='git show'
alias gst='git stash'

alias m='make'
alias s='ssh'
alias v="$EDITOR"

alias l='ls --color'
alias la='ls -A --color'
alias ll='ls -lh --color'
alias lla='ls -lAh --color'

case $OS_CATEGORY in
	'macos')
		alias nix-upgrade="sudo -i sh -c 'nix-channel --update && nix-env -iA nixpkgs.nix && launchctl remove org.nixos.nix-daemon && launchctl load /Library/LaunchDaemons/org.nixos.nix-daemon.plist'"
		;;
	'debian')
		alias aud='sudo apt update'
		alias alu='apt list --upgradable'
		alias aug='sudo apt upgrade -y'
		REBOOT_FILE='/var/run/reboot-required'
		alias reboot-required='[ -f "$REBOOT_FILE" ] && cat "$REBOOT_FILE"'
		;;
esac
