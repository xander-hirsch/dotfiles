alias d='dirs -v'
for index ({1..5}) alias $index="cd +${index}"; unset index

alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gco='git checkout'
alias gd='git diff'
alias gf='git fetch'
alias gl='git log --graph'
alias glog='git log --graph --oneline'
alias gr='git restore'
alias gs='git status'
alias gsh='git show'

alias m='make'
alias s='ssh'
alias v="$EDITOR"

alias l='ls --color'
alias la='ls -A --color'
alias ll='ls -lh --color'
alias lla='ls -lAh --color'
alias ls='ls --color'

if [[ -d '/nix' ]]; then
	alias ncu="sudo -i sh -c 'nix-channel --update'"
fi

if [[ $(uname -s) == 'Linux' ]]; then
	REBOOT_FILE='/var/run/reboot-required'
	alias reboot-required='[ -f "$REBOOT_FILE" ] && cat "$REBOOT_FILE"'
fi

case $OS_CATEGORY in
	'macos')
		alias b='brew'
		;;
	'debian')
		alias aud='sudo apt update'
		alias alu='apt list --upgradable'
		alias aug='sudo apt upgrade -y'
		;;
esac
