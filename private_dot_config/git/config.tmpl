[alias]
alias = !git config get --all --show-names --regexp ^alias. | cut -b 7-
co = checkout
last = log -1 HEAD --stat
lg = log --graph
sw = switch
st = status --short

[core]
{{ if lookPath "delta" -}} pager = delta {{- end }}

[diff]
algorithm = histogram

[fetch]
prune = true

[init]
defaultBranch = {{ .defaultBranch }}

[log]
abbrevCommit = true

[merge]
conflictStyle = zdiff3

[pull]
ff = only

[user]
email = {{ .email }}
name = Xander Hirsch
